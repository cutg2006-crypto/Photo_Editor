<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">  <!-- 设置为圆形 -->

    <!-- 填充颜色 -->
    <solid android:color="#E3F2FD" />  <!-- 浅蓝色背景 -->

    <!-- 边框 -->
    <stroke
        android:width="2dp"
    android:color="#2196F3" />   <!-- 边框颜色 -->

    <!-- 圆角大小（对圆形无效，但保留） -->
    <corners android:radius="100dp" />

</shape>